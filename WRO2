#include <Servo.h>

Servo myservo;  // create servo object to control a servo
// twelve servo objects can be created on most boards

int pos = 0;    // variable to store the servo position

void setup() {
myservo.attach(13);  // attaches the servo on pin 9 to the servo object
pinMode(11,OUTPUT);//tagamootorid
pinMode(10,OUTPUT);
pinMode(4,INPUT);
pinMode(0,INPUT);
Serial.begin(9600);
}

void loop() {
 
boolean input;

input = digitalRead(0);
Serial.println(input);
delay(1000);
 if(input ==0){
  for (pos = 0; pos <= 30; pos += 1){  // goes from 180 degrees to 0 degrees
    myservo.write(pos);              // tell servo to go to position in variable 'pos'
    delay(15);
  digitalWrite(11, 0);
digitalWrite(10,255);//sõidab otse kiirusega 100
delay(100);//5 sekund
  digitalWrite(11, 0);
digitalWrite(10, 0);//seisab
delay(100);
  }
 for (pos = 50; pos >= 0; pos -= 1){  // goes from 180 degrees to 0 degrees
   myservo.write(pos);              // tell servo to go to position in variable 'pos'
   delay(15);
    digitalWrite(11, 0);
digitalWrite(10,255);//sõidab otse kiirusega 100
delay(10);//1 sekund'
  digitalWrite(11, 0);
digitalWrite(10, 0);//seisab
delay(100);
}
 
}
 }
 else(input ==1);{
  digitalWrite(11, 0);
digitalWrite(10, 0);//seisab
delay(100);
 }
}
